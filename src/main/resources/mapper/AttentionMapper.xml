<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.fcc.stock.record.mapper.AttentionMapper">
    <insert id="insertOrUpdateAttention" parameterType="xyz.fcc.stock.record.entity.Attention">
        INSERT INTO t_attention
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="times != null">times,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="times != null">#{times},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
        ON DUPLICATE KEY UPDATE
        type = VALUES(type),
        update_time = VALUES(update_time)
    </insert>

    <select id="selectAttentionByName" resultType="xyz.fcc.stock.record.entity.Attention">
        SELECT
        id,
        name,
        type,
        create_time AS createTime,
        update_time AS updateTime,
        times
        FROM t_attention
        WHERE name = #{name}
    </select>

    <select id="selectAttentionByTypeWithPaging" resultType="xyz.fcc.stock.record.entity.Attention">
        SELECT
        id,
        name,
        type,
        create_time AS createTime,
        update_time AS updateTime,
        times
        FROM t_attention
        <where>
            1=1
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
        </where>
        ORDER BY times DESC, update_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countAttentionByType" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM t_attention
        <where>
            1=1
            <if test="type != null and type != ''">
                AND type = #{type}
            </if>
        </where>
    </select>

    <update id="incrementTimesByName">
        update t_attention
        set
        times = times + 1,
        update_time = CURRENT_TIMESTAMP
        where name = #{name}
    </update>
</mapper>